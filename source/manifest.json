{
  "manifest_version": 2,
  "name": "IGN Enhancer 2",
  "version": "0.0.8",
  "icons": {
    "48": "assets/icons/logo.png"
  },
  "description": "Addon para turbinar o nosso querido FÃ³rum IGN",
  "homepage_url": "https://github.com/goguera/ign-enhancer-2",
  "short_name": "IGN Enhancer 2",

  "permissions": [
    "activeTab",
    "storage",
    "cookies",
    "windows",
    "browser_action",
    "https://www.ignboards.com/*",
    "*://*.ignboards.com/*"
  ],

  "incognito": "split",

  "host_permissions": [
    "*://*.ignboards.com/*",
    "https://www.ignboards.com/*"
  ],

  "content_security_policy": "script-src 'self'; object-src 'self'",

  "__chrome|firefox__author": "goguera",
  "__opera__developer": {
    "name": "goguera"
  },

  "__firefox__applications": {
    "gecko": {
      "id": "{754FB1AD-CC3B-4856-B6A0-7786F8CA9D17}"
    }
  },

  "__chrome__minimum_chrome_version": "49",
  "__opera__minimum_opera_version": "36",

  "browser_action": {
    "default_icon": {
       "48": "assets/icons/logo.png"
    },
    "default_title": "IGN Enhancer 2"
  },

  "__chrome|opera__options_page": "options.html",
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true,
    "__chrome__chrome_style": false
  },

  "background": {
    "scripts": ["js/background.bundle.js"],
    "__chrome|opera__persistent": false
  },

  "content_scripts": [
    {
      "matches": ["*://ignboards.com/*", "*://www.ignboards.com/*"],
      "js": ["js/contentScriptThreads.bundle.js"]
    },
    {
      "matches": ["*://ignboards.com/*", "*://www.ignboards.com/*"],
      "js": ["js/queuePopover.bundle.js"]
    },
    {
      "matches": ["*://ignboards.com/forums/*", "*://www.ignboards.com/forums/*"],
      "js": ["js/contentScriptForums.bundle.js"]
    },
    {
      "matches": [
        "*://ignboards.com/threads/*", 
        "*://www.ignboards.com/threads/*", 
        "*://ignboards.com/conversations/*", 
        "*://www.ignboards.com/conversations/*"
      ],
      "js": ["js/threadPostInterceptor.bundle.js"]
    }
  ]
}
